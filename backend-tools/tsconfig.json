{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./build",

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "preserveSymlinks": true,

    "isolatedModules": true,
    "esModuleInterop": true,

    "strict": true,
    "allowJs": false,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "paths": {
      "@/*": ["./*"],
      "@tslib/*": ["./tslib/*"],
      "@tsback/*": ["./tsback/*"]
    }
  },
  "exclude": ["node_modules", "doc", "code", "**/*.spec.ts"],
  "typeRoots": ["./src/types"],
  "include": ["./src/**/*.ts"],
  "files": ["src/index.ts", "src/types/global.d.ts"],
}
